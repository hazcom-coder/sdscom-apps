
@{
    ViewData["Title"] = "Phrase Selector";
    Layout = null;
}

<button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal">Show Phrases</button>

@model IEnumerable<SDSComApps.Models.Entity>
<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Phrase Selector</h4>
            </div>
            <div class="modal-body">
                <table class="table table-condensed table-hover">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                    </tr>
                    @foreach (var b in Model)
                    {
                        <tr>
                            <td>@b.ID</td>
                            <td>@b.EntityName</td>
                        </tr>
                    }
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


